
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())   
  email     String   @unique                
  username  String  @unique
  password  String  
  name  String?
  avatar String?
  createdAt DateTime @default(now())
  posts Post[]
  }

  model Post{
    id        String   @id @default(cuid())   
    userId String
    content String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
 
    user User @relation(fields:[userId],references: [id])
  }